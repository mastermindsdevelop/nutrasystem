@model Nutra.Models.iletisim


<div class="span5 noMarginLeft">

    <div class="message dark">

        <div class="header">
            <h1>"@Model.konu"</h1>
            <div class="from"><i class="halflings-icon user"></i> <b>@Model.adsoyad</b> / @Model.eposta</div>
            <div class="date"><i class="halflings-icon time"></i>@Model.tarih</div>

            <div class="menu"></div>

        </div>

        <div class="content">

            <blockquote>
                @Model.mesaj
            </blockquote>

        </div>

        <form class="replyForm" method="post" action="">
            <fieldset>
                <textarea tabindex="3" class="input-xlarge span12" id="message" name="body" rows="12" placeholder="Yanıtlamak için tıklayınız"></textarea>
                <div class="actions">

                    <button tabindex="3" type="submit" class="btn btn-success">Mesajı Gönder</button>

                </div>
            </fieldset>
        </form>

    </div>

</div>

